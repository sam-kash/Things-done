FROM oven/bun:1

WORKDIR /app

COPY ./package.json ./package.json

COPY ./bun.lock ./bun.lock

COPY ./packages ./packages

COPY ./turbo.json ./turbo.json

COPY ./apps/ws ./apps/ws

##COPY . .

RUN bun install

ARG DATABASE_URL
ENV DATABASE_URL=${DATABASE_URL}

RUN bun run db:generate

EXPOSE 8081

CMD [ "bun", "run", "start:ws" ]
